<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	    <Dialog title="Statistics"
		        resizable="true">
		    <content>
		        <Toolbar>
		            <Title level="H2" text="How many items are bought from Wishlist?"/>
		            <ToolbarSpacer/>
		            <Button icon="sap-icon://list"
		                    type="Unstyled"
		                    press="onPressShowTableBtn"/>
		            <Button icon="sap-icon://pie-chart"
		                    type="Unstyled"
		                    press="onPressShowChartBtn"
		                    visible="false"/>
		        </Toolbar>
		    </content>
		    <endButton>
	            <Button text="Cancel"
	                    press="onClose"/>
		    </endButton>
		</Dialog>
</core:FragmentDefinition>