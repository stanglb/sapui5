<core:View xmlns:core="sap.ui.core" 
    controllerName="view.Debitor" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m" 
	xmlns:f="sap.ui.layout.form"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page   id="idDebitor"
	        title="Customer">
		<content>
		    <f:SimpleForm   id="idSimpleFormDebitor" 
                            title="Customer"
                            editable="true" 
                            layout="ResponsiveGridLayout"
                            columnsL="1"
                            columnsM="1">
                 <f:content>
                    <Label text="Choose Customer" />
        			<Input
        				id="idInputCustomer"
        				type="Text"
        				enabled="true"
        				editable="true"
        				showValueHelp="true"
        				valueHelpOnly="true"
        				valueHelpRequest="onPressValueRequest"/>
                </f:content>
            </f:SimpleForm>
		</content>
		<footer>
            <Toolbar>
                <Button text="Go Shooping"
                        icon="sap-icon://slim-arrow-left" 
                        press="onPressGoShoppingBtn"/>
            </Toolbar>
        </footer>
	</Page>
</core:View>