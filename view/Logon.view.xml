<sap.ui.core.mvc:View 
    controllerName="view.Logon"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:sap.ui.core="sap.ui.core"
    xmlns:sap.ui.core.mvc="sap.ui.core.mvc" >
    <Page   id="idLogon"
            title="Welcome">
        <content>
            <f:SimpleForm   id="SimpleFormLogin" 
                            title="Login"
                            editable="true" 
                            layout="ResponsiveGridLayout"
                            columnsL="1"
                            columnsM="1">
                <f:content>
                    
                    <Label  id="idUserName" 
                            text="User Name"></Label>
                    <Input  id="idUserNameInput" 
                            width="100%"></Input>
                    <Label  id="idPassword" 
                            text="Password"></Label>
                    <Input  id="idPasswordInput" 
                            width="100%" 
                            type="Password"></Input>
                </f:content>
            </f:SimpleForm>
            <Button id="BtnLogin" 
                            text="Login" 
                            width="100px"
                            icon="sap-icon://log"
                            press="onPressLoginBtn"></Button>
        </content>
    </Page>
</sap.ui.core.mvc:View>