<sap.ui.core.mvc:View controllerName="view.PositionsInfo"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:sap.ui.layout.form="sap.ui.layout.form"
    xmlns:sap.ui.core="sap.ui.core"
    xmlns:sap.ui.core.mvc="sap.ui.core.mvc" >
    <Page   id="idPositionsInfo" 
            title="Postitions Info"
            showNavButton="true"
            navButtonPress="handleNavBack">
        <content>
                    <f:SimpleForm   id="idSimpleForm"
                                    minWidth="1024"
                                    maxContainerCols="2"
                                    editable="true"
                                    layout="ResponsiveGridLayout"
                                    title="Product 1"
                                    labelSpanL="3"
                                    labelSpanM="3"
                                    emptySpanL="4"
                                    emptySpanM="4"
                                    columnsL="1"
                                    columnsM="1">
                        <f:content>
                            <Label  text="Material Number" />
                            <Text   id="idMatnrText"/>
                            <Label  text="Product" />
                            <Text   id="idProductText"/>
                            <Label  text="Quantity" />
                           <!-- <Select items="{1, 2, 3, 4, 5}"/>-->
                            <Input  id="idMengeInput"
                                    type="Number"
                                    liveChange="onLiveChange"/>
                            <Label  text="Price" />
                            <Text   id="idPriceText" />
                            <Label  text="Factory" />
                            <Text   id="idWerkText"/>
                            <Label  text="Price date" />
                            <Text   id="idDateText"/>
                        </f:content>
                    </f:SimpleForm>
        </content>
         <footer>
            <Toolbar>
                <ToolbarSpacer/>
                <Button text="Add to Cart"
                        icon="sap-icon://add" 
                        press="onPressAddBtn"/>
            </Toolbar>
        </footer>
    </Page>
</sap.ui.core.mvc:View>